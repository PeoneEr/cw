<div class="add_post">
  <%= link_to "Добавить", new_post_path %>
</div>
<table>
  <thead>
    <th>Название</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= link_to "Изменить", edit_post_path(post.id) %></td>
        <td><%= link_to "Удалить", post_path(post.id), method: :delete, confirm: "Вы уверены?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
